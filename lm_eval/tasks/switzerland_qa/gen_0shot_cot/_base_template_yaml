dataset_path: swiss-ai/switzerland_qa
test_split: test
output_type: generate_until

# Prompt template
num_fewshot: 0
doc_to_text: |-
  Question: {{ question | trim }}
  Choices:
  (A) {{ option_a | trim }}
  (B) {{ option_b | trim }}
  (C) {{ option_c | trim }}
  (D) {{ option_d | trim }}
  Think step by step and then finish your answer with "The answer is (X)" where X is the correct letter choice.

# Ground-truth letter
doc_to_target: answer

# Post-process model generations to a single letter via your helper
filter_list:
  - name: "extract-answer"
    filter:
      - function: "ordered_regex"
        regex_patterns:
          - '[Tt]he answer is\s+\(?([A-D])\)?\b'
          - '[Tt]he answer is:\s+\(?([A-D])\)?\b'
          - '[Tt]he final answer is\s+\(?([A-D])\)?\b'
          - 'answer is\s+\(?([A-D])\)?\b'
          - '[Tt]he final answer:\s+\(?([A-D])\)?\b'
          - '\(([A-D])\)'
          - "([A-D])"
        group_select: -1
      - function: "take_first"

generation_kwargs:
  until:
    - "</s>"
    - "Question:"
    - "<|im_end|>"
  max_gen_toks: 1024
  temperature: 0.0
metric_list:
  - metric: exact_match
    aggregation: mean
    higher_is_better: true
metadata:
  version: 1.0
